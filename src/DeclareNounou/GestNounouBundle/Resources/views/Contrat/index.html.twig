{# import du layout du bundle #}
{% extends "DeclareNounouGestNounouBundle::layout.html.twig" %}

{% block body %}
    <h1>Liste des contrats</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Enfant</th>
                <th>Nounou</th>
                <th>Date de début</th>
                <th>Date de fin</th>
                <th>Heures mensuelles</th>
                <th>Tarif horaire</th>
                <th>Tarif repas</th>
                <th>Tarif indemnités</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('contrat_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.enfant }}</td>
                <td>{{ entity.nounou }}</td>
                <td>{% if entity.dateDebut %}{{ entity.dateDebut|localizeddate('medium','none') }}{% endif %}</td>
                <td>{% if entity.dateFin %}{{ entity.dateFin|localizeddate('medium','none') }}{% endif %}</td>
                <td>{{ entity.heuresMensuelles }}<span> h</span></td>
                <td>{{ entity.tarifHoraire }}<span> €</span></td>
                <td>{{ entity.tarifRepas }}<span> €</span></td>
                <td>{{ entity.tarifIndemnite }}<span> €</span></td>
                <td>
                <p>
                    <a href="{{ path('contrat_show', { 'id': entity.id }) }}" class="btn btn-success">
                    <span class="el-icon-eye-open"></span> Voir</a>
                    <a href="{{ path('contrat_edit', { 'id': entity.id }) }}" class="btn btn-warning">
                    <span class="el-icon-edit"></span> Modifier</a>
                </p>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <p>
            <a href="{{ path('contrat_new') }}" class="btn btn-primary">
                <span class="el-icon-plus"></span> Ajouter un contrat
            </a>
    </p>
    {% endblock %}
