{# import du layout du bundle #}
{% extends "DeclareNounouGestNounouBundle::layout.html.twig" %}

{% block body %}
    <h1>Liste des nourrices</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Pr√©nom</th>
                <th>Date de naissance</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('nounou_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nom }}</td>
                <td>{{ entity.prenom }}</td>
                <td>{{ entity.dateNaissance|localizeddate('medium','none') }}</td>
                <td>{{ entity.adresse }}</td>
                <td>{{ entity.codePostal }}</td>
                <td>{{ entity.ville }}</td>
                <td>
                    <p>
                        <a href="{{ path('nounou_show', { 'id': entity.id }) }}" class="btn btn-success">
                            <span class="el-icon-eye-open"></span> Voir</a>
                        <a href="{{ path('nounou_edit', { 'id': entity.id }) }}" class="btn btn-warning">
                            <span class="el-icon-edit"></span> Modifier</a>
                    </p>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <p>
            <a href="{{ path('nounou_new') }}" class="btn btn-primary">
                <span class="el-icon-plus"></span> Ajouter une nourrice
            </a>
    </p>
    {% endblock %}
