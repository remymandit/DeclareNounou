<div class="col-md-offset-3 col-md-6">
<h3>{{ 'change_password.title'|trans }}</h3>
</div>
<div class="well col-md-offset-3 col-md-6">
{# personnalisation des erreurs #}
{% form_theme form 'DeclareNounouGestNounouBundle:Form:fields_errors.html.twig' %}
<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password">
    {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.current_password) }}
            {{ form_errors(form.current_password) }}
            {{ form_widget(form.current_password, {'attr': {'class': 'form-control col-md-12'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword.first) }}
            {{ form_errors(form.plainPassword.first) }}
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control col-md-12'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.plainPassword.second) }}
            {{ form_errors(form.plainPassword.second) }}
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control col-md-12'}}) }}
        </div>
    <hr>
    <div>
        <a href="{{ path('fos_user_profile_show') }}" class="btn btn-success">
        <i class="el-icon-chevron-left"></i>
        {{ 'change_password.back'|trans }}
    </a>
            <button type="submit"  class="btn btn-danger"><i class="el-icon-refresh"></i> {{ 'change_password.submit'|trans }}</button>
    </div>
    {{ form_end(form) }}
</div>
