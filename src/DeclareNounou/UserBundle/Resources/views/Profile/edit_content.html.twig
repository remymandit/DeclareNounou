<div class="col-md-offset-3 col-md-6">
<h3>{{ 'profile.edit.title'|trans }}</h3>
</div>
<div class="well col-md-offset-3 col-md-6">
    {# personnalisation des erreurs #}
    {% form_theme form 'DeclareNounouGestNounouBundle:Form:fields_errors.html.twig' %}
    <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit" role="form">
    {{ form_errors(form) }}
        <div class="form-group">
            {{ form_label(form.username) }}
            {{ form_errors(form.username) }}
            {{ form_widget(form.username, {'attr': {'class': 'form-control col-md-12'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control col-md-12'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.current_password) }}
            {{ form_errors(form.current_password) }}
            {{ form_widget(form.current_password, {'attr': {'class': 'form-control col-md-12'}}) }}
        </div>
        <hr>
        <div>
            <a href="{{ path('fos_user_profile_show') }}" class="btn btn-success">
            <i class="el-icon-chevron-left"></i>
            {{ 'profile.edit.back'|trans }}
            </a>
            <button type="submit" class="btn btn-danger"><i class="el-icon-refresh"></i> {{ 'profile.edit.submit'|trans }}</button>
        </div>
    {{ form_end(form) }}
</div>
