{% extends "DeclareNounouUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {% if error %}
        <div class="alert alert-danger">{{ error.message|trans }}</div>
    {% endif %}
    <div class="col-md-offset-3 col-md-6">
        <h1><img src="{{ asset("../favicon.ico") }}" /> Gestion Nourrice</h1>
    </div>
    <div class="row">
        <div class="well col-md-offset-3 col-md-6">
            <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group form-group-lg">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>
                </div>
                <div class="form-group form-group-lg">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required" class="form-control"/>
                </div>
                <div class="checkbox">
                    <label for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" >
                        {{ 'security.login.remember_me'|trans }}
                    </label>
                </div>
                <button type="submit" class="btn btn-primary" id="_submit" name="_submit" ><span class="el-icon-unlock"></span> {{ 'security.login.submit'|trans }}</button>
            </form>
            <hr>
            <p>Pas encore de compte ?<a href="{{ path('ask_beta_key') }}"> Demandez un accès à la beta</a></p>
            <p>Vous avez reçu votre code ?<a href="{{ path('fos_user_registration_register') }}"> Créez votre compte</a></p>
        </div>
    </div>
{% endblock fos_user_content %}
