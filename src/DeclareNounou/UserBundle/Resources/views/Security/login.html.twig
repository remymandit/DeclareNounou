{% extends "DeclareNounouUserBundle::layout.html.twig" %}

{% block fos_user_content %}
    {% if error %}
        <div class="alert alert-error">{{ error|trans }}</div>
    {% endif %}
    <div class="offset3 span6">
        <h3>{{ 'security.login.title'|trans }}</h3>
    </div>

    <div class="row-fluid">
        <div class="well offset3 span6">
            <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="form-group controls">
                    <label for="username">{{ 'security.login.username'|trans }}</label>
                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control span12"/>
                </div>
                <div class="form-group controls">
                    <label for="password">{{ 'security.login.password'|trans }}</label>
                    <input type="password" id="password" name="_password" required="required" class="form-control span12"/>
                </div>
                <div class="checkbox">
                    <label for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" >
                        {{ 'security.login.remember_me'|trans }}
                    </label>
                </div>
                <button type="submit" class="btn btn-primary" id="_submit" name="_submit" ><span class="el-icon-unlock"></span> {{ 'security.login.submit'|trans }}</button>
            </form>
        </div>
    </div>
{% endblock fos_user_content %}
