<div class="col-md-offset-3 col-md-6">
    <h1><img src="{{ asset("../favicon.ico") }}" /> Gestion Nourrice</h1>
</div>
<div class="row">
    <div class="well col-md-offset-3 col-md-6">
        {# personnalisation des erreurs #}
        {% form_theme form 'DeclareNounouGestNounouBundle:Form:fields_errors.html.twig' %}
        <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
        {{ form_errors(form) }}
        {{ form_row(form.invitation)}}
        {{ form_row(form.username)}}
        {{ form_row(form.email)}}
        {{ form_row(form.plainPassword.first)}}
        {{ form_row(form.plainPassword.second)}}
        <button type="submit" class="btn btn-primary"><span class="el-icon-plus"></span> {{ 'registration.submit'|trans }}</button>
        {{ form_end(form) }}
        <hr>
        <p>Vous avez déjà un compte ?<a href="{{ path('fos_user_security_login') }}"> Connectez-vous</a></p>
    </div>
</div>
